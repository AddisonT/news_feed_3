<!--views/articles/index.ejs-->
<!DOCTYPE HTML>
<html>
<link rel="stylesheet" href="/style.css">

<body>
<h1>Articles index</h1>
			<a href="/">Main Page</a>
		</br>
		</br>

		<% articlesList.forEach(function(article) { %>
<div>
  <a href="/articles/<%= article.id %>"><%= article.title %></a>
  <div>
    <%= article.content %>
  </div>
</div>
<% }) %>
</br>
<div>
	<form action="/articles/new" method="GET">
		<button type="submit" class="button">Create New Article</button>
	</form>
</br>
</div>
</body>
</html>

